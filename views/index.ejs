<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Job Links</title>
  <meta name="google-adsense-account" content="ca-pub-2003392549681036">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2003392549681036"
     crossorigin="anonymous"></script>

<body class="bg-light">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Job Links</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
  
  <main class="container my-5">
    <h2 class="mb-4">Available Job Opportunities</h2>
    <% if (jobs.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% jobs.forEach(job => { %>
          <div class="col">
            <div class="card h-100 shadow-sm position-relative">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= job.title %></h5>
                <p class="card-text flex-grow-1">
                  <%= job.description && job.description.length > 100 
                        ? job.description.substring(0, 100) + "..." 
                        : job.description %>
                </p>
                <p class="mb-1">
                  <small class="text-muted">Posted: <%= new Date(job.postedAt).toLocaleDateString() %></small>
                </p>
                <% if (job.deadline) { %>
                  <p class="mb-3">
                    <small class="text-muted">Deadline: <%= new Date(job.deadline).toLocaleDateString() %></small>
                  </p>
                <% } else { %>
                  <p class="mb-3">
                    <small class="text-muted">Closing soon â€“ apply at the earliest</small>
                  </p>
                <% } %>
                <a href="/job/<%= job._id %>" class="btn btn-outline-primary mt-auto">View Details</a>
              </div>
              <!-- Stretched link -->
              <a href="/job/<%= job._id %>" class="stretched-link"></a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-info">No job links available at the moment.</div>
    <% } %>
  </main>
  
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
