<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= job.title %> - Job Details</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Job Links</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
  
  <main class="container my-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="card-title"><%= job.title %></h1>
        <p class="card-text"><%= job.description %></p>
        <p class="card-text">
          <small class="text-muted">Posted on: <%= new Date(job.postedAt).toLocaleDateString() %></small>
        </p>
        <p class="card-text">
          <small class="text-muted">Application Deadline: <%= new Date(job.deadline).toLocaleDateString() %></small>
        </p>
        <!-- Container for the live countdown timer -->
        <div id="countdown" class="mb-3 text-danger fw-bold"></div>
        <!-- Button to apply (opens the job URL in a new tab) -->
        <a href="<%= job.url %>" target="_blank" class="btn btn-primary">Apply Now</a>
        <a href="/" class="btn btn-secondary ms-2">Back to Listings</a>
      </div>
    </div>
  </main>
  
  <!-- Bootstrap JS Bundle (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Calculate the countdown for the application deadline
    const deadline = new Date("<%= job.deadline.toISOString() %>");
    const now = new Date();
    const diffTime = deadline - now;
    const countdownEl = document.getElementById('countdown');
    
    if (diffTime > 0) {
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
      countdownEl.textContent = diffDays + ' day' + (diffDays > 1 ? 's' : '') + ' left to apply';
    } else {
      countdownEl.textContent = 'Application closed';
    }
  </script>
</body>
</html>
